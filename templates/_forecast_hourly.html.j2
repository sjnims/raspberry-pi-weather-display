<!-- Begin Hourly Forecast Section -->

<div class="forecast">
  {% for h in hourly %}
    <div class="forecast__card">
      <div class="forecast__card-name">{{ h.local_time }}</div>
      <svg class="forecast__card-icon">
        <use href="{{ url_for('static', filename='icons/sprite.svg') }}#{{ h.weather[0] | weather_icon | replace('.svg','') }}"></use>
      </svg>
      <div class="forecast__card-temp">{{ h.temp | round | int }}{{ units_temp }}</div>
      <div class="forecast__card-meta">
        {{ h.wind_speed | round(0) }} {{ units_wind }}<br>
        <svg class="forecast__wind-icon"
             data-wind-indicator
             style="--wind-angle: {{ h.wind_deg | wind_direction_angle }};">
          <use href="{{ url_for('static', filename='icons/sprite.svg') }}#wi-wind-deg"></use>
        </svg><br>
        {{ get_precipitation_amount(h) }}
      </div>
    </div>
  {% endfor %}
</div>

<!-- End Hourly Forecast Section -->